printf("Enter x and n (<= 5):\n");
scanf("%d %d"
, &x, &n);
result = power(x, n);
printf("%d^%d = %d\n"
, x, n, result);
return 0;
}
int power(int x, int n) {
if (n == 0) {
return 1;
} else if (n == 1) {
return x;
} else if (n <= 5) {
return x * power(x, n-1);
} else {
